<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">
    <Transition
        motion:autoTransition="animateToEnd"
        motion:constraintSetEnd="@+id/motionEnd"
        motion:constraintSetStart="@+id/motionStart"
        motion:duration="1500" />

    <ConstraintSet android:id="@+id/motionStart">
        <Constraint
            android:id="@+id/tv_status_content"
            android:layout_height="wrap_content"
            android:scaleX="0"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="@+id/guideline"
            motion:layout_constraintTop_toTopOf="@+id/tv_status_title"
            android:layout_marginStart="16dp"
            android:alpha="0"
            android:layout_marginEnd="16dp" />
        <Constraint
            android:id="@+id/button_ok"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            motion:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="16dp"
            android:layout_marginEnd="32dp"
            android:layout_marginStart="32dp"
            motion:layout_constraintStart_toStartOf="parent">
            <CustomAttribute
                motion:attributeName="textColor"
                motion:customColorValue="@color/colorAccent" />
            <CustomAttribute
                motion:attributeName="translationY"
                motion:customDimension="75dp" />
        </Constraint>
    </ConstraintSet>

    <ConstraintSet android:id="@+id/motionEnd">
        <Constraint
            android:id="@+id/tv_status_content"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:scaleX="1"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="@+id/guideline"
            motion:layout_constraintTop_toTopOf="@+id/tv_status_title"
            android:alpha="1"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp" />
        <Constraint
            android:id="@+id/button_ok"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            motion:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="16dp"
            android:layout_marginEnd="32dp"
            android:layout_marginStart="32dp"
            motion:layout_constraintStart_toStartOf="parent">
            <CustomAttribute
                motion:attributeName="textColor"
                motion:customColorValue="@color/black" />
            <CustomAttribute
                motion:attributeName="translationY"
                motion:customDimension="0dp" />
        </Constraint>
    </ConstraintSet>
</MotionScene>